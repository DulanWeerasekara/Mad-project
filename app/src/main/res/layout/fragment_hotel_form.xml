<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hotelform"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelForm">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="476dp"
        android:layout_height="796dp"
        android:layout_marginBottom="355dp"
        android:scaleType="fitXY"


        />



    <androidx.cardview.widget.CardView
        android:layout_width="376dp"
        android:layout_height="600dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="30px"

       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/HR_topic"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="86dp"
                android:text="Hotel Registartion"

                android:textSize="34sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/HR_nameTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Hotel Name"
                android:textSize="@dimen/HR_listNames"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/hotelName"

                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:ems="10"

                android:textColor="#807B7B"
                android:textColorHint="#716E6E"
                android:textSize="10sp"

                android:inputType="textPersonName"
 />

            <TextView
                android:id="@+id/HR_addressTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Hotel Address"
                android:textSize="@dimen/HR_listNames"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/hotelAddress"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="textPostalAddress"
                android:textColor="#807B7B"
                android:textColorHint="#716E6E"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/HR_emailTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="@dimen/HR_listNames"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/hotelEmail"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:ems="10"
                android:inputType="textEmailAddress" />



            <LinearLayout
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/HR_phoneTopic"
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:text="Phone"
                    android:textSize="@dimen/HR_listNames"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/HR_priceTopic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="price"
                    android:textSize="@dimen/HR_listNames"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="305dp"
                android:layout_height="27dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/hotelPhone"
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/hotelPrice"
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/HR_districtTopic"
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:text="District"
                    android:textSize="@dimen/HR_listNames"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/HR_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Upload Image"
                    android:textSize="@dimen/HR_listNames"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="305dp"
                android:layout_height="30dp"
                android:orientation="horizontal">








            </LinearLayout>
            <Button
                android:id="@+id/hotelRegButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text="Register" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>